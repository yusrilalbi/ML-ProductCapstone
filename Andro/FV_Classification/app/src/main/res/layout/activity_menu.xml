<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <TextView
        android:fontFamily="sans-serif-black"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:textColor="#3F51B5"
        android:text="Welcome Guest !!!"
        android:textAlignment="center"
        android:textSize="25sp" />
    <LinearLayout
        android:id="@+id/portofolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portofolio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow"
        android:elevation="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="155dp"
            android:layout_height="215dp"
            android:background="@drawable/profil"
            android:text="LIHAT TABEL" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="CAMERA"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shadow"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/uploadButton"
            android:layout_width="155dp"
            android:layout_height="215dp"
            android:background="@drawable/getstarted"
            android:text="LIHAT TABEL" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="UPLOAD FILE" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/footer"
        android:background="#E8E7E7" />
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_login_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/apelBesar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/apple" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignLeft="@id/apelBesar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/setting"
        android:shadowColor="#000000"
        android:text="Or Upload Your Fruit and Vegetable From Your Device"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cekkol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portofolio"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/profile"
        android:shadowColor="#000000"
        android:text="Check your Fruit and Vegetbale using Camera"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/seeUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/shadow"

        android:elevation="5dp"
        android:text="See Detail" />


</RelativeLayout>